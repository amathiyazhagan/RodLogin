{
  "manifest_version": 2,

  "name": "RodLogin",
  "description": "Reduce Key Strokes",
  "version": "1.0",

  "background": { 
    //"scripts": ["background.js"],
    "page": "background.html"
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
      "matches":["https://*.ssi-cloud.com/*"],
      "js":["content.js"]
    },{
      "matches": ["https://accounts.google.com/o/oauth2/approval*"],
      "js": ["oauth2/oauth2_inject.js"],
      "run_at":"document_end"
    }],

  "permissions": [
    "https://accounts.google.com/o/oauth2/token","tabs"
  ],

  "web_accessible_resources": [
    "oauth2/oauth2.html"
  ]
}
